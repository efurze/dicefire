<section id="setup">
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
				<div id="player_select" style="margin-left:10px; margin-top:10px; margin-bottom: 20px;">
					<h1>Welcome to Dicefire</h1>
					<p>If you haven't played this game before, here's a good primer:</p>
					<hr/>
					<h3>Now, who will compete in this game?</h3>
					<p>Choose the player profiles for this game:</p>
					<form action="{{url}}" method="post">
						{{#each playerList}}
						<fieldset class="form-group">
    						<label for="{{this.inputName}}">Player {{@index}}</label>
							{{{this.selectHTML}}}
							{{#if @first}} <span style="position:absolute">&nbsp;<--leave this as 'Human' if you want to play</span> {{/if}}				
					  	</fieldset>
						{{/each}}
						<div class="button-container">
							<input type="submit" value="Let's go!" class="btn btn-primary btn-large">
						</div>
					</form>
				</div>

			</div>
		</div>
	</div>
</section>
